@import "vars";

.contact-us {
	background-image: none;

	.row-intro {
		border: none;
	}

	.guide-to-webs {
		margin-right: 20px;
	}

	.post-detail {
		.address {
			margin-top: 35px;
		}
	}
    .information-block {
        margin-bottom: rem(95px);
		@include respond-to-max($tabletSize) {
			margin-bottom: rem(30px);
		}
    }
}

.post-detail {
	&:before {
		content: ' ';
		display: block;
		background: #d9d9d9;
		height: 1px;
		width: 90%;
		position: absolute;
		bottom: 0;
		left: 35px;
	}
	@include respond-to-max($tabletSize) {
		&:before {
			left: 15px;
		}
	}
}

.selected-new {
	.col-sm-7 {
		.post-detail {
			@include respond-to-min($tabletSize) {
				&:before {
					height: 0;
				}
			}
		}
	}
}

.post-title {
	h3 {
		margin-top: 0;
	}
}

.input-field {
	margin-top: 20px;

	.alert-message, .at-error, .at-warning {
		position: relative;
		width: 100%;
		background: #ff6c6c;
		color: white;
		padding: 10px;
		margin: 0;
		
		&:before {
			position: absolute;
			border: 15px solid transparent;
			border-top-color: #ff6c6c;
			right: 6px;
			bottom: -23px;
			content: "";
		}
		.arrowdown {
			position: absolute;
			border: 15px solid transparent;
			border-top-color: #ff6c6c;
			right: 6px;
			bottom: -23px;
		}
	}
}
.link-btns {
	background: transparent;
    border: 0;
    text-transform: uppercase;
    margin: 10px 0 0;
    padding: 0;
}
.mobile-number-wrapper {
	.alert-message {
		display: block;
	}
}
.input-field {
	position: relative;
	.glyphicon {
		top: 47px;
		right: 4.5px;
		&.glyphicon-ok {
			display: none;
		}
		&:before {
			color: #FF6C6C;
		}
	}
}


