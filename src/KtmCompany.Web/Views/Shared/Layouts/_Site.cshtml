@using System.Web.Optimization
@using KtmCompany.Web.Helpers
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->
<head>
    @{ Html.RenderAction("MetaData", "Global");}
    <!--[if lte IE 9]>
            <link rel="stylesheet" href="/Frontend/KTM/css/style-old-ie.css" media="all" />
        <![endif]-->
    <!--[if gt IE 9]><!-->
    <link href="~/Frontend/KTM/css/style.css" rel="stylesheet" media="all" />
    <!--<![endif]-->
    <link href="~/Frontend/KTM/css/custom.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="StyleSheet">

    @Scripts.Render("~/bundles/modernizr")
    @*@Scripts.Render("~/bundles/jquery")*@
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    @Html.Raw(Html.RequiredClientResources("Header")) @*Enable components to require resources. For an example, see the view for VideoBlock.*@
</head>
<body>
    @Html.RenderEPiServerQuickNavigator()

    @{Html.RenderAction("Header", "Global");}

    @RenderBody()

    @{Html.RenderAction("Footer", "Global");}

    @*@Scripts.Render("~/bundles/site-scripts")*@
    @Html.Raw(Html.RequiredClientResources("Footer"))
    @RenderSection("BottomScripts", required: false)
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    @*<script src="~/Frontend/KTM/js/jquery.nav.js"></script>*@
    <script src="~/Frontend/KTM/js/jquery.pagenav.js"></script>
    <script src="~/Frontend/KTM/js/jquery.countTo.js"></script>
    <script src="~/Frontend/KTM/js/jquery.waypoints.js"></script>
    <script src="~/Frontend/KTM/js/jquery-ui.min.js"></script>
    <script src="~/Frontend/KTM/js/jquery.mobile.js"></script>
    <script src="~/Frontend/KTM/js/picturefill.min.js"></script>
    <script src="~/Frontend/KTM/js/ktm.js"></script>
    <script src="~/Frontend/KTM/js/html5lightbox.js"></script>
    <script src="~/Frontend/KTM/js/sticky.js" async></script>
    <script src="~/Frontend/KTM/js/owl.carousel.min.js"></script>
    <script src="~/Frontend/KTM/js/video.js"></script>
    <script src="~/Frontend/KTM/js/mobile-detect.js"></script>
    <script src="~/Frontend/KTM/js/common.min.js"></script>
    @if (!string.IsNullOrEmpty(ConfigurationSettingHelpers.GetGoogleAnalyticsId()))
    {
        <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments);
            }, i[r].l = 1 * new Date();
            a = s.createElement(o),
            m = s.getElementsByTagName(o)[0];
            a.async = 1;
            a.src = g;
            m.parentNode.insertBefore(a, m);
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', '@ConfigurationSettingHelpers.GetGoogleAnalyticsId()', 'auto');
        ga('set', 'anonymizeIp', true);
        ga('send', 'pageview');

        </script>
    }
    <div class="loading modal-backdrop" style="display:none;">
        <div id="loading-icon" class="text-center text-middle">
            <img src="/Frontend/KTM/images/ajax-loader.gif" style="height: 72px; width: 72px; left: 50%; top: 50%; position: absolute;" />
        </div>
    </div>
</body>
</html>