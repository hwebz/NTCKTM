@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;    
    var dicRelease = new DirectoryInfo(AppDomain.CurrentDomain.BaseDirectory + @"\Static\HtmlRelease");
    var releaseFolders = dicRelease.GetDirectories().OrderByDescending(p=>p.Name);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Index of Static HTML</title>
    <link href="css/style.css" rel="StyleSheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="StyleSheet">
</head>
<body>
    <div style="margin-top: 15px;" class="container">
        <div class="row">
            <div class="col-md-12">               
                <div class="panel panel-primary">
                    @foreach (var folder in releaseFolders)
                    {
                        var files = folder.GetFiles("*.html", SearchOption.AllDirectories);
                        <div class="panel-heading">
                            <h3 class="panel-title">Release @folder.Name</h3>
                        </div>
                        <div class="panel-body">
                            <ul class="list-group">
                                @foreach (FileInfo file in files)
                                {
                                    <li class="list-group-item"><a href="~/static/htmlrelease/@folder.Name/@file.Name">@file.Name</a></li>
                                }
                            </ul>
                        </div>
                    }                    
                </div>                 
            </div>
        </div>
    </div>
</body>
</html>
