@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;
    DirectoryInfo Dir = new DirectoryInfo(AppDomain.CurrentDomain.BaseDirectory + @"\Static\Html");
    FileInfo[] FileList = Dir.GetFiles("*.html", SearchOption.AllDirectories);    
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Index of Static HTML</title>
    <link href="css/style.css" rel="StyleSheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="StyleSheet">
</head>
<body>
    <div style="margin-top: 15px;" class="container">
        <div class="row">
            <div class="col-md-12">                               
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Develop</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group">
                            @foreach (FileInfo file in FileList)
                            {
                                <li class="list-group-item"><a target="_blank" href="~/static/html/@file.Name">@file.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
